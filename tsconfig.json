{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES6", "DOM", "es2019"],
    "allowJs": true,
    "module": "ESNext",
    "rootDir": "./src",
    "moduleResolution": "node",
    "declaration": false,
    "inlineSourceMap": false,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "esm": true
}
  
}
